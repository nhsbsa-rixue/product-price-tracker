{
  "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**",
    "**/*.test.ts",
    "**/__mocks__/**",
  ]
}